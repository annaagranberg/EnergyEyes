import React from "react";
import { VictoryChart, VictoryLine, VictoryAxis } from "victory";

const EnergyUsageChart = ({ energyData }) => {
  const data = energyData.map((datum) => {
    const date = new Date(datum.date);
    return {
      x: date.getHours(),
      y: datum.usage,
    };
  });

  return (
    <VictoryChart>
      <VictoryAxis label="Hours" tickCount={24} />
      <VictoryAxis dependentAxis label="Energy Usage (kWh)" />
      <VictoryLine data={data} />
    </VictoryChart>
  );
};

export default EnergyUsageChart;

